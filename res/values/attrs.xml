<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <declare-styleable name="CSSLayout">
        <!--
        <attr name="layout_width" format="dimension"></attr>
        <attr name="layout_height" format="dimension"></attr>
        -->
        <attr name="layout_minWidth" format="dimension"></attr>
        <attr name="layout_minHeight" format="dimension"></attr>
        <attr name="layout_maxWidth" format="dimension"></attr>
        <attr name="layout_maxHeight" format="dimension"></attr>
        <attr name="layout_left" format="dimension"></attr>
        <attr name="layout_right" format="dimension"></attr>
        <attr name="layout_top" format="dimension"></attr>
        <attr name="layout_bottom" format="dimension"></attr>
        <attr name="layout_margin" format="dimension"></attr>
        <attr name="layout_marginLeft" format="dimension"></attr>
        <attr name="layout_marginRight" format="dimension"></attr>
        <attr name="layout_marginTop" format="dimension"></attr>
        <attr name="layout_marginBottom" format="dimension"></attr>
        <attr name="layout_padding" format="dimension"></attr>
        <attr name="layout_paddingLeft" format="dimension"></attr>
        <attr name="layout_paddingRight" format="dimension"></attr>
        <attr name="layout_paddingTop" format="dimension"></attr>
        <attr name="layout_paddingBottom" format="dimension"></attr>
        <attr name="layout_borderWidth" format="dimension"></attr>
        <attr name="layout_borderLeftWidth" format="dimension"></attr>
        <attr name="layout_borderRightWidth" format="dimension"></attr>
        <attr name="layout_borderTopWidth" format="dimension"></attr>
        <attr name="layout_borderBottomWidth" format="dimension"></attr>
        <attr name="layout_alignSelf" format="enum">
            <enum name="auto" value="0"></enum>
            <enum name="flex_start" value="1"></enum>
            <enum name="center" value="2"></enum>
            <enum name="flex_end" value="3"></enum>
            <enum name="stretch" value="4"></enum>
        </attr>
        <attr name="layout_flex" format="float"></attr>
        <attr name="layout_position" format="enum">
            <enum name="relative" value="0"></enum>
            <enum name="absolute" value="1"></enum>
        </attr>

        <!-- 父节点的属性 -->
        <attr name="layout_flexDirection" format="enum">
            <enum name="column" value="0"></enum>
            <enum name="column_reverse" value="1"></enum>
            <enum name="row" value="2"></enum>
            <enum name="row_reverse" value="3"></enum>
        </attr>

        <attr name="layout_justifyContent" format="enum">
            <enum name="flex_start" value="0"></enum>
            <enum name="center" value="1"></enum>
            <enum name="flex_end" value="2"></enum>
            <enum name="space_between" value="3"></enum>
            <enum name="space_around" value="4"></enum>
        </attr>

        <attr name="layout_alignItems" format="enum">
            <enum name="auto" value="0"></enum>
            <enum name="flex_start" value="1"></enum>
            <enum name="center" value="2"></enum>
            <enum name="flex_end" value="3"></enum>
            <enum name="stretch" value="4"></enum>
        </attr>

        <attr name="layout_alignContent" format="enum">
            <enum name="auto" value="0"></enum>
            <enum name="flex_start" value="1"></enum>
            <enum name="center" value="2"></enum>
            <enum name="flex_end" value="3"></enum>
            <enum name="stretch" value="4"></enum>
        </attr>

        <attr name="layout_flexWrap" format="enum">
            <enum name="nowrap" value="0"></enum>
            <enum name="wrap" value="1"></enum>
        </attr>
    </declare-styleable>
</resources>
